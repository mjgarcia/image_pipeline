<package>
  <description brief="camera_calibration">

     camera_calibration allows easy calibration of monocular or stereo
     cameras using a checkerboard calibration target.

  </description>
  <author>James Bowman</author>
  <license>BSD</license>
  <review status="Doc reviewed" notes="Jan 18, 2010"/>
  <url>http://www.ros.org/wiki/camera_calibration</url>
  <depend package="opencv2"/>
  <depend package="cv_bridge"/>
  <depend package="image_geometry"/>
  <depend package="roscpp"/>
  <depend package="geometry_msgs"/>
  <depend package="std_srvs"/>
  <depend package="sensor_msgs"/>
  <depend package="message_filters"/>
  <depend package="camera_calibration_parsers"/>
  <depend package="rospy"/>

  <export>
    <cpp lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lcamera_calibration" cflags="-I${prefix}/include -I${prefix}/msg/cpp"/>
    <rosdoc config="rosdoc.yaml" />
  </export>

</package>
